generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?
  createdAt DateTime @default(now())
}

model User {
  id            Int      @id @default(autoincrement())
  email         String?  @unique
  createdAt     DateTime @default(now())
  firstName     String?
  lastName      String?
  username      String?  @unique
  walletAddress String   @unique
}


model Campaign {
  id               Int      @id @default(autoincrement())
  name             String
  category         String
  shortDescription String
  fullDescription  String
  fundingGoal      Int
  currentFunding   Int      @default(0)
  support          String
  votes            String
  deadline         DateTime
  location         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime
}
