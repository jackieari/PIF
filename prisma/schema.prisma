generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?
  createdAt DateTime @default(now())
}

model User {
  id            Int      @id @default(autoincrement())
  walletAddress String   @unique
  username      String?  @unique
  firstName     String?
  lastName      String?
  email         String?  @unique
  createdAt     DateTime @default(now())
}